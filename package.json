{
  "$schema": "https://raw.githubusercontent.com/sourcegraph/sourcegraph/master/shared/src/schema/extension.schema.json",
  "name": "vscode-extras",
  "description": "Integrates Sourcegraph with your local VS Code",
  "publisher": "sourcegraph",
  "activationEvents": [
    "*"
  ],
  "wip": false,
  "categories": [
    "Other"
  ],
  "tags": [
    "vscode",
    "editor",
    "open"
  ],
  "contributes": {
    "actions": [
      {
        "id": "vscode.open.file",
        "command": "vscode.open.file",
        "commandArguments": [
          "${resource.uri}"
        ],
        "title": "Open file in VS Code",
        "category": "VS Code",
        "actionItem": {
          "description": "Open file in VS Code",
          "iconURL": "https://upload.wikimedia.org/wikipedia/commons/9/9a/Visual_Studio_Code_1.35_icon.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "action": "vscode.open.file",
          "when": "resource"
        }
      ],
      "commandPalette": [
        {
          "action": "vscode.open.file",
          "when": "resource"
        }
      ]
    },
    "configuration": {
      "properties": {
        "vscode.open.basePath": {
          "description": "The file path on the machine to the folder that is expected to contain all repositories.",
          "type": "string"
        }
      }
    }
  },
  "version": "0.0.0-DEVELOPMENT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/sourcegraph-vscode-extras"
  },
  "license": "Apache-2.0",
  "main": "dist/vscode-extras.js",
  "scripts": {
    "eslint": "eslint 'src/**/*.ts'",
    "typecheck": "tsc -p tsconfig.json",
    "build": "parcel build --out-file dist/vscode-extras.js src/vscode-extras.ts",
    "symlink-package": "mkdirp dist && lnfs ./package.json ./dist/package.json",
    "serve": "yarn run symlink-package && parcel serve --no-hmr --out-file dist/vscode-extras.js src/vscode-extras.ts",
    "watch:typecheck": "tsc -p tsconfig.json -w",
    "watch:build": "tsc -p tsconfig.dist.json -w",
    "sourcegraph:prepublish": "yarn run typecheck && yarn run build"
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 1 Safari versions"
  ],
  "devDependencies": {
    "@sourcegraph/eslint-config": "^0.16.0",
    "@sourcegraph/tsconfig": "^4.0.1",
    "@types/node": "^13.13.2",
    "eslint": "^6.8.0",
    "lnfs-cli": "^2.1.0",
    "mkdirp": "^1.0.4",
    "parcel-bundler": "^1.12.4",
    "sourcegraph": "^24.1.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {}
}
